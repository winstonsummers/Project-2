<h2>My Library</h2>
<div class="container">
	<h3>What new books have you found?</h3>
	<form method="get" action="/book/newbook">
		<label>Search By:</label>
		<input type="text" name="userinput" placeholder="Title, Author or ISBN">
		<input type="submit" value="Search">
	</form>
</div>
<div class="container">
	<!-- for each loop to show books linked to user through db -->
	<ul class="list-group">
		<% if(results.length <= 0) {%>
			<li class="list-group-item">You don't have any books yet. Find one in the prompt above!</li>
		<%}else{%>

			<%results.forEach(function(item){%>
				<li class="list-group-item">
					<form>
						<p class="list-group-item-heading"><%= item.title %></p>
						<p class="list-group-item-text"><%= item.name%></p>
						<img src="http://covers.openlibrary.org/b/id/<%= item.imgurl %>-S.jpg">
						<a href="/book/library/<%= item.title%>" class="delete-link btn btn-danger">Delete Book</a>
					</form>
				</li>

			<%});%>
		<%}%>
	</ul>
</div>